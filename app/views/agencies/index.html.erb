<p id="notice"><%= notice %></p>
<div class="container">
<h3>Listing Agencies</h3>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Agency Name</th>
      <th>Phone</th>
      <th>Address</th>      
      <th></th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agencies.each do |agency| %>
      <tr>
        <td><%= agency.name %></td>
        <td><%= agency.phone %></td>
        <td><%= agency.address %></td>
        <div class="btn-group">
        <td><%= link_to 'Show', agency ,:class => "btn btn-warning" %></td>
        <td><%= link_to 'Edit', edit_agency_path(agency),:class => "btn btn-primary"  %></td>
        <td><%= link_to 'Destroy', agency,:class => "btn btn-danger" , method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Agency', new_agency_path,class: "btn btn-success" %>
</div>